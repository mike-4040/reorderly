{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "target": "es2022",
    "lib": ["es2022"],
    "skipLibCheck": true,
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
